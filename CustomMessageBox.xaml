<Window
    x:Class="ExcelFileLocator.CustomMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title=""
    Width="450"
    Height="200"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.Resources>
        <!--  按钮样式  -->
        <Style x:Key="MessageBoxButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="34" />
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5BA3F5" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A7BC8" />
                            </Trigger>
                            <Trigger Property="IsDefault" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2C3E50" />
                                <Setter TargetName="border" Property="BorderThickness" Value="2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  次要按钮  -->
        <Style
            x:Key="SecondaryMessageBoxButton"
            BasedOn="{StaticResource MessageBoxButton}"
            TargetType="Button">
            <Setter Property="Background" Value="#E8EDF3" />
            <Setter Property="Foreground" Value="#4A90E2" />
        </Style>

        <!--  图标样式  -->
        <Style x:Key="IconTextBlock" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,15,0" />
        </Style>
    </Window.Resources>

    <Border
        Background="White"
        BorderBrush="#4A90E2"
        BorderThickness="1"
        CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Direction="270"
                Opacity="0.3"
                ShadowDepth="5"
                Color="#000000" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  标题栏  -->
            <Border
                Grid.Row="0"
                Background="#4A90E2"
                CornerRadius="7,7,0,0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="15,8">
                    <TextBlock
                        x:Name="txtTitle"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="提示" />
                </Grid>
            </Border>

            <!--  内容区域  -->
            <Grid Grid.Row="1" Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  图标  -->
                <TextBlock
                    x:Name="txtIcon"
                    Grid.Column="0"
                    Style="{StaticResource IconTextBlock}"
                    Text="ℹ" />

                <!--  消息内容  -->
                <TextBlock
                    x:Name="txtMessage"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Foreground="#2C3E50"
                    Text="这是消息内容"
                    TextWrapping="Wrap" />
            </Grid>

            <!--  按钮区域  -->
            <StackPanel
                Grid.Row="2"
                Margin="20,0,20,15"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="btnYes"
                    Click="BtnYes_Click"
                    Content="是"
                    Style="{StaticResource MessageBoxButton}"
                    Visibility="Collapsed" />
                <Button
                    x:Name="btnNo"
                    Click="BtnNo_Click"
                    Content="否"
                    Style="{StaticResource SecondaryMessageBoxButton}"
                    Visibility="Collapsed" />
                <Button
                    x:Name="btnOK"
                    Click="BtnOK_Click"
                    Content="确定"
                    IsDefault="True"
                    Style="{StaticResource MessageBoxButton}"
                    Visibility="Collapsed" />
                <Button
                    x:Name="btnCancel"
                    Click="BtnCancel_Click"
                    Content="取消"
                    IsCancel="True"
                    Style="{StaticResource SecondaryMessageBoxButton}"
                    Visibility="Collapsed" />
            </StackPanel>
        </Grid>
    </Border>
</Window>